{
  "name": "speller-game",
  "version": "1.0.0",
  "description": "A multilingual spelling game that helps users learn vocabulary in English, Dutch, and German",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "serve": "npx serve -s . -l 8000",
    "start": "npx serve -s . -l 8000",
    "lint": "eslint *.js test/*.js",
    "lint:fix": "eslint *.js test/*.js --fix",
    "format": "prettier --write *.js *.json *.md test/*.js",
    "format:check": "prettier --check *.js *.json *.md test/*.js",
    "prepare": "which pre-commit > /dev/null && pre-commit install || echo 'pre-commit not installed, skipping hooks setup'"
  },
  "keywords": [
    "spelling",
    "game",
    "multilingual",
    "education",
    "javascript"
  ],
  "author": "commjoen",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "serve": "^14.2.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
    "testMatch": ["<rootDir>/test/**/*.test.js"]
  }
}